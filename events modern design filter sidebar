            },
            {
                id: 8,
                name: "Data Science Conference",
                sessionName: "Big Data Analytics & Visualization",
                type: "conference",
                status: "upcoming",
                startDate: "2024-03-20",
                endDate: "2024-03-22",
                description: "Comprehensive conference covering the latest in data science, big data analytics, and data visualization techniques.",
                participants: 520,
                image: "https://storage.googleapis.com/workspace-0f70711f-8b4e-4d94-86f1-2a93ccde5887/image/cbd96882-1959-4c7f-a4f8-96b46ce83776.png"
            }
        ];

        let filteredEvents = [...eventsData];

        // Initialize the page
        document.addEventListener('DOMContentLoaded', function() {
            renderEvents(filteredEvents);
            setupFilterListeners();
        });

        // Setup event listeners for filters
        function setupFilterListeners() {
            // Event type filters
            document.querySelectorAll('input[name="eventType"]').forEach(checkbox => {
                checkbox.addEventListener('change', applyFilters);
            });

            // Event status filters
            document.querySelectorAll('input[name="eventStatus"]').forEach(checkbox => {
                checkbox.addEventListener('change', applyFilters);
            });

            // Date filters
            document.getElementById('startDate').addEventListener('change', applyFilters);
            document.getElementById('endDate').addEventListener('change', applyFilters);
        }

        // Apply filters to events
        function applyFilters() {
            const selectedTypes = Array.from(document.querySelectorAll('input[name="eventType"]:checked')).map(cb => cb.value);
            const selectedStatuses = Array.from(document.querySelectorAll('input[name="eventStatus"]:checked')).map(cb => cb.value);
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;

            filteredEvents = eventsData.filter(event => {
                // Filter by type
                if (selectedTypes.length > 0 && !selectedTypes.includes(event.type)) {
                    return false;
                }

                // Filter by status
                if (selectedStatuses.length > 0 && !selectedStatuses.includes(event.status)) {
                    return false;
                }

                // Filter by date range
                if (startDate && event.startDate < startDate) {
                    return false;
                }
                if (endDate && event.endDate > endDate) {
                    return false;
                }

                return true;
            });

            renderEvents(filteredEvents);
            updateEventCount(filteredEvents.length);
        }

        // Render events to the DOM
        function renderEvents(events) {
            const eventsGrid = document.getElementById('eventsGrid');
            const noEventsDiv = document.getElementById('noEvents');

            if (events.length === 0) {
                eventsGrid.style.display = 'none';
                noEventsDiv.style.display = 'block';
                return;
            }

            eventsGrid.style.display = 'flex';
            noEventsDiv.style.display = 'none';

            eventsGrid.innerHTML = events.map(event => `
                <div class="event-card" data-type="${event.type}" data-status="${event.status}">
                    <div class="event-image">
                        <img src="${event.image}" alt="Event image showing ${event.name} with ${event.sessionName} theme featuring modern conference setup with attendees and speakers" onerror="this.src='https://storage.googleapis.com/workspace-0f70711f-8b4e-4d94-86f1-2a93ccde5887/image/eca4cf2c-36a4-4670-8192-a30b1a2495a4.png'" />
                        <div class="event-status status-${event.status}">${event.status}</div>
                        <div class="event-type">${event.type}</div>
                    </div>
                    <div class="event-details">
                        <h3 class="event-title">${event.name}</h3>
                        <div class="session-name">${event.sessionName}</div>
                        <div class="event-date">
                            <i class="fas fa-calendar"></i>
                            ${formatDateRange(event.startDate, event.endDate)}
                        </div>
                        <p class="event-description">${event.description}</p>
                        <div class="event-actions">
                            <a href="#" class="read-more-btn" onclick="readMore(${event.id})">
                                Read More <i class="fas fa-arrow-right"></i>
                            </a>
                            <div class="event-participants">
                                <i class="fas fa-users"></i>
                                ${event.participants} participants
                            </div>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        // Format date range
        function formatDateRange(startDate, endDate) {
            const start = new Date(startDate);
            const end = new Date(endDate);
            
            const options = { month: 'short', day: 'numeric', year: 'numeric' };
            
            if (startDate === endDate) {
                return start.toLocaleDateString('en-US', options);
            }
            
            return `${start.toLocaleDateString('en-US', options)} - ${end.toLocaleDateString('en-US', options)}`;
        }

        // Update event count
        function updateEventCount(count) {
            document.getElementById('eventCount').textContent = count;
        }

        // Sort events
        function sortEvents() {
            const sortBy = document.getElementById('sortSelector').value;
            
            filteredEvents.sort((a, b) => {
                switch (sortBy) {
                    case 'name':
                        return a.name.localeCompare(b.name);
                    case 'type':
                        return a.type.localeCompare(b.type);
                    case 'status':
                        return a.status.localeCompare(b.status);
                    case 'date':
                    default:
                        return new Date(a.startDate) - new Date(b.startDate);
                }
            });
            
            renderEvents(filteredEvents);
        }

        // Clear all filters
        function clearAllFilters() {
            // Clear checkboxes
            document.querySelectorAll('input[type="checkbox"]').forEach(cb => cb.checked = true);
            
            // Clear date inputs
            document.getElementById('startDate').value = '';
            document.getElementById('endDate').value = '';
            
            // Reset filtered events and re-render
            filteredEvents = [...eventsData];
            renderEvents(filteredEvents);
            updateEventCount(filteredEvents.length);
        }

        // Read more functionality
        function readMore(eventId) {
            const event = eventsData.find(e => e.id === eventId);
            alert(`More details about: ${event.name}\n\nSession: ${event.sessionName}\n\nDescription: ${event.description}\n\nParticipants: ${event.participants}\n\nDates: ${formatDateRange(event.startDate, event.endDate)}`);
        }
    </script>
</body>
</html>


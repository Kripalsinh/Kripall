        const onlineUsers = [
            'Alex Rivera', 'Sarah Johnson', 'Mike Chen', 'Emma Wilson', 'Jordan Lee',
            'Casey Morgan', 'Taylor Swift', 'Ryan Chen', 'Sam Thompson', 'Alex Kumar'
        ];

        function openCommunityChat(communityId) {
            currentCommunity = communityId;
            const community = communityData[communityId];
            if (!community) return;

            // Update popup header
            document.getElementById('chatCommunityName').textContent = community.name;
            document.getElementById('chatOnlineCount').textContent = `${community.onlineCount} online`;
            document.getElementById('chatCommunityIcon').innerHTML = `<img src="${community.icon}" alt="Community chat icon for ${community.name}" />`;

            // Clear and populate messages
            chatPopupMessages.innerHTML = '';
            community.messages.forEach(msg => {
                const messageEl = createCommunityMessage(msg.text, msg.own, msg.user, msg.avatar, msg.time);
                chatPopupMessages.appendChild(messageEl);
            });

            // Populate online users
            populateOnlineUsers();

            // Create overlay
            const overlay = document.createElement('div');
            overlay.className = 'chat-overlay';
            overlay.onclick = closeCommunityChat;
            document.body.appendChild(overlay);

            // Show popup
            setTimeout(() => {
                overlay.classList.add('active');
                communityChatPopup.classList.add('active');
                chatPopupInput.focus();
            }, 10);
        }

        function closeCommunityChat() {
            communityChatPopup.classList.remove('active');
            const overlay = document.querySelector('.chat-overlay');
            if (overlay) {
                overlay.classList.remove('active');
                setTimeout(() => {
                    overlay.remove();
                }, 300);
            }
            currentCommunity = null;
        }

        function createCommunityMessage(text, isOwn = false, username = 'You', avatar = 'YO', time = null) {
            const messageDiv = document.createElement('div');
            messageDiv.className = `popup-message ${isOwn ? 'own' : ''}`;
            
            const currentTime = time || new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
            const bgColor = isOwn ? 'var(--primary-color)' : getRandomColor();
            
            messageDiv.innerHTML = `
                <div class="popup-message-avatar" style="background: ${bgColor};">
                    ${avatar}
                </div>
                <div class="popup-message-bubble">
                    <div class="popup-message-info">
                        <span class="popup-username">${username}</span>
                        <span class="popup-timestamp">${currentTime}</span>
                    </div>
                    <div class="popup-message-text">${text}</div>
                </div>
            `;
            
            return messageDiv;
        }

        function getRandomColor() {
            const colors = ['#10b981', '#f59e0b', '#ef4444', '#8b5cf6', '#06b6d4', '#f97316'];
            return colors[Math.floor(Math.random() * colors.length)];
        }

        function populateOnlineUsers() {
            const usersList = document.getElementById('onlineUsersList');
            usersList.innerHTML = '';
            
            const shuffledUsers = [...onlineUsers].sort(() => 0.5 - Math.random()).slice(0, 8);
            shuffledUsers.forEach(username => {
                const userEl = document.createElement('div');
                userEl.className = 'online-user';
                const initials = username.split(' ').map(n => n[0]).join('');
                userEl.innerHTML = `
                    <div class="online-user-avatar">${initials}</div>
                    <span>${username}</span>
                `;
                usersList.appendChild(userEl);
            });
        }

        function sendCommunityMessage() {
            const text = chatPopupInput.value.trim();
            if (!text || !currentCommunity) return;

            // Add user message
            const userMessage = createCommunityMessage(text, true);
            chatPopupMessages.appendChild(userMessage);
            chatPopupInput.value = '';
            chatPopupMessages.scrollTop = chatPopupMessages.scrollHeight;

            // Show typing indicator
            chatTypingIndicator.classList.add('visible');

            // Simulate response after 1-3 seconds
            setTimeout(() => {
                chatTypingIndicator.classList.remove('visible');
                const responses = [
                    "That's a great point!",
                    "I completely agree with that perspective.",
                    "Thanks for sharing that insight!",
                    "Interesting approach, I hadn't thought of that.",
                    "Great question! Let me think about that.",
                    "That's exactly what I was looking for!",
                    "Really helpful information, thank you!",
                    "I love how active this community is!"
                ];
                const responseText = responses[Math.floor(Math.random() * responses.length)];
                const randomUser = onlineUsers[Math.floor(Math.random() * onlineUsers.length)];
                const initials = randomUser.split(' ').map(n => n[0]).join('');
                const responseMessage = createCommunityMessage(responseText, false, randomUser, initials);
                chatPopupMessages.appendChild(responseMessage);
                chatPopupMessages.scrollTop = chatPopupMessages.scrollHeight;
            }, Math.random() * 2000 + 1000);
        }

        function handleCommunityKeyPress(event) {
            if (event.key === 'Enter') {
                sendCommunityMessage();
            }
        }

        // Animate stats numbers
        function animateStats() {
            const statNumbers = document.querySelectorAll('.stat-number');
            
            const animateNumber = (element, target) => {
                let current = 0;
                const increment = target / 100;
                const timer = setInterval(() => {
                    current += increment;
                    element.textContent = Math.floor(current).toLocaleString();
                    
                    if (current >= target) {
                        element.textContent = target.toLocaleString();
                        clearInterval(timer);
                    }
                }, 20);
            };

            statNumbers.forEach(stat => {
                const target = parseInt(stat.dataset.target);
                animateNumber(stat, target);
            });
        }

        // Start stats animation when section is visible
        function setupStatsAnimation() {
            const statsSection = document.getElementById('stats');
            if (!statsSection) return;

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        animateStats();
                        observer.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.5 });

            observer.observe(statsSection);
        }

        function toggleSaveCommunity(communityId) {
            const saveBtn = document.querySelector(`[data-community="${communityId}"] .save-btn`);
            const communityItem = document.querySelector(`[data-community="${communityId}"]`);
            
            if (savedCommunities.has(communityId)) {
                savedCommunities.delete(communityId);
                saveBtn.classList.remove('saved');
                saveBtn.innerHTML = '<i class="fas fa-bookmark"></i>';
                communityItem.classList.remove('saved');
            } else {
                savedCommunities.add(communityId);
                saveBtn.classList.add('saved');
                saveBtn.innerHTML = '<i class="fas fa-bookmark" style="color: white;"></i>';
                communityItem.classList.add('saved');
            }
        }

        // Close community chat on escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape' && communityChatPopup.classList.contains('active')) {
                closeCommunityChat();
            }
        });

        // Add some Easter eggs
        let clickCount = 0;
        document.addEventListener('DOMContentLoaded', function() {
            const logo = document.querySelector('.logo');
            if (logo) {
                logo.addEventListener('click', function(e) {
                    e.preventDefault();
                    clickCount++;
                    if (clickCount === 5) {
                        this.style.animation = 'pulse 0.5s ease';
                        setTimeout(() => {
                            this.style.animation = '';
                            clickCount = 0;
                        }, 500);
                    }
                });
            }
        });
    </script>
</body>
</html>


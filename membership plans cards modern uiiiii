    <script>
        const planPricing = {
            bronze: { monthly: 9.99, annual: 95.90 },
            silver: { monthly: 19.99, annual: 191.90 },
            gold: { monthly: 39.99, annual: 383.90 },
            platinum: { monthly: 79.99, annual: 767.90 },
            diamond: { monthly: 149.99, annual: 1439.90 }
        };

        const planColors = {
            bronze: '#CD7F32',
            silver: '#C0C0C0',
            gold: '#FFD700',
            platinum: '#E5E4E2',
            diamond: '#B9F2FF'
        };

        let selectedPlan = '';
        let selectedBilling = '';

        // Plan selection
        document.querySelectorAll('.plan-card').forEach(card => {
            card.addEventListener('click', () => {
                selectedPlan = card.dataset.plan;
                openBillingModal(selectedPlan);
            });
        });

        // Open billing modal
        function openBillingModal(plan) {
            const modal = document.getElementById('billingModal');
            const planName = document.getElementById('selectedPlanName');
            const monthlyPrice = document.getElementById('monthlyPrice');
            const annualPrice = document.getElementById('annualPrice');
            const billingContent = document.querySelector('.billing-content');
            
            planName.textContent = plan;
            monthlyPrice.textContent = `$${planPricing[plan].monthly}/month`;
            annualPrice.textContent = `$${planPricing[plan].annual}/year`;
            
            // Set plan color
            document.documentElement.style.setProperty('--selected-plan-color', planColors[plan]);
            
            modal.classList.add('active');
            document.body.style.overflow = 'hidden';
            
            // Reset selections
            selectedBilling = '';
            document.querySelectorAll('.billing-option').forEach(option => {
                option.classList.remove('selected');
            });
            document.getElementById('proceedBtn').classList.remove('active');
        }

        // Close modal
        document.getElementById('closeBtn').addEventListener('click', closeModal);
        document.getElementById('billingModal').addEventListener('click', (e) => {
            if (e.target.id === 'billingModal') {
                closeModal();
            }
        });

        function closeModal() {
            document.getElementById('billingModal').classList.remove('active');
            document.body.style.overflow = 'auto';
        }

        // Billing selection
        document.querySelectorAll('.billing-option').forEach(option => {
            option.addEventListener('click', () => {
                document.querySelectorAll('.billing-option').forEach(opt => {
                    opt.classList.remove('selected');
                });
                option.classList.add('selected');
                selectedBilling = option.dataset.billing;
                
                const proceedBtn = document.getElementById('proceedBtn');
                proceedBtn.classList.add('active');
                
                // Add pulse animation
                proceedBtn.style.animation = 'pulse 0.5s ease';
                setTimeout(() => {
                    proceedBtn.style.animation = '';
                }, 500);
            });
        });

        // Proceed button
        document.getElementById('proceedBtn').addEventListener('click', () => {
            if (selectedPlan && selectedBilling) {
                const price = planPricing[selectedPlan][selectedBilling];
                const billingText = selectedBilling === 'monthly' ? 'month' : 'year';
                
                alert(`Proceeding with ${selectedPlan.toUpperCase()} plan - $${price}/${billingText}`);
                closeModal();
                
                // Add success animation to selected plan
                const selectedCard = document.querySelector(`[data-plan="${selectedPlan}"]`);
                selectedCard.style.animation = 'pulse 1s ease';
                setTimeout(() => {
                    selectedCard.style.animation = '';
                }, 1000);
            }
        });

        // Add pulse animation keyframe
        const style = document.createElement('style');
        style.textContent = `
            @keyframes pulse {
                0% { transform: scale(1); }
                50% { transform: scale(1.05); }
                100% { transform: scale(1); }
            }
        `;
        document.head.appendChild(style);

        // Keyboard navigation
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                closeModal();
            }
        });
    </script>
</body>
</html>


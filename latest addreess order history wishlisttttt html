                    <i class="fas fa-box-open" style="margin-right: 10px;"></i>
                    Order Items (${order.items.length})
                </h4>
                
                ${itemsHtml}
                
                <div class="shipping-info" style="margin-top: 30px; padding: 20px; background: rgba(0,0,0,0.05); border-radius: 12px;">
                    <h4 style="margin-bottom: 15px; font-size: 1.2rem; color: var(--text-primary); display: flex; align-items: center;">

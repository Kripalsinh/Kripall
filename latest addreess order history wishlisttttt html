        // Wishlist functionality
        function removeFromWishlist(itemId) {
            if (confirm('Are you sure you want to remove this item from your wishlist?')) {
                // In a real application, this would make an API call
                event.target.closest('.card').style.animation = 'slideOut 0.3s ease forwards';
                setTimeout(() => {
                    event.target.closest('.card').remove();
                }, 300);
                
                // Show success message
                showNotification('Item removed from wishlist successfully!', 'success');
            }
        }

        // Order details modal
        function showOrderDetails(orderId) {
            const order = orderData[orderId];
            const modal = document.getElementById('orderModal');
            const content = document.getElementById('orderModalContent');
            
            let itemsHtml = '';
            order.items.forEach(item => {
                itemsHtml += `
                    <div style="display: flex; gap: 15px; margin-bottom: 20px; padding-bottom: 20px; border-bottom: 1px solid var(--border-color);">
                        <img src="${item.image}" alt="${item.description}" style="width: 80px; height: 80px; border-radius: 8px; object-fit: cover;"/>
                        <div style="flex: 1;">
                            <h4 style="margin-bottom: 5px;">${item.name}</h4>
                            <p style="color: var(--text-secondary); margin-bottom: 10px;">${item.description}</p>
                            <p><strong>Quantity:</strong> ${item.quantity}</p>
                            <p style="color: var(--primary-color); font-weight: bold; font-size: 16px;">$${item.price.toFixed(2)} each</p>
                        </div>
                    </div>
                `;
            });
            
            content.innerHTML = `
                <div class="modal-header" style="background: linear-gradient(90deg, var(--primary-color), var(--secondary-color)); color: white; padding: 15px; border-radius: 12px; margin-bottom: 25px;">
                    <h3 style="margin: 0; font-size: 1.5rem; display: flex; justify-content: space-between; align-items: center;">
                        <span>Order #${order.id}</span>
                        <span class="order-status status-${order.status.toLowerCase()}" style="font-size: 0.8rem; padding: 5px 12px;">${order.status}</span>
                    </h3>
                </div>

                <div class="order-meta" style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 25px;">
                    <div class="order-date" style="background: rgba(0,0,0,0.05); padding: 15px; border-radius: 10px;">
